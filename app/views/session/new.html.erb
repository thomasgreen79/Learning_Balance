<h1 class='col-md-offset-1'>Log in</h1>
</br>
</br>
<div class="row">
  <div class="col-md-5 col-md-offset-2">
    <%= form_for(:session, url: login_path) do |f| %>
      
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control login-input' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control login-input' %>
      </br>
      <%= f.submit "Log in", class: 'btn btn-primary' %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
