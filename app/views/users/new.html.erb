<h1 class='col-md-offset-1'>Sign up for a new account</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-2">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control login-input" %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control login-input" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control login-input" %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: "form-control login-input" %>

      <%= f.submit "Create new account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
